#!/bin/sh
chmod +x script/deploy
ssh ec2-user@ip-172-31-29-194 <<EOF
MONGODB_CONNECTION=$(aws ssm get-parameter --name " MONGODB_CONNECTION "  --query "Parameter.Value" --output text)
    cd ~/ApplicationTrackerBackend
    git pull origin mongodb-atlas
nvm install 16
    npm install
    npm install -g nodemon pm2
    pm2 restart ecosystem.config.js
    exit
EOF